{
  "name": "nmtn",
  "version": "0.0.1",
  "description": "Tiny animation library designed with simplicity and modernity at its core",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:esbuild": "ts-node build.ts",
    "build:types": "tsc -P tsconfig.build.json",
    "test": "jest",
    "lint": "run-p -lc --aggregate-output 'lint:*'",
    "lint:eslint": "eslint --color --cache './**/*.{js,jsx,ts,tsx}'",
    "lint:prettier": "prettier --color --check './**/*.{js,jsx,ts,tsx,json,css,html}'",
    "format": "run-s 'format:*'",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "yarn lint:prettier --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "esbuild": "^0.17.15",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creasty/nmtn.git"
  },
  "keywords": [
    "animation",
    "easing",
    "spring",
    "tween",
    "typescript"
  ],
  "author": "creasty <yuki@creasty.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/creasty/nmtn/issues"
  },
  "homepage": "https://github.com/creasty/nmtn#readme"
}
